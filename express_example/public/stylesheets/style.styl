mainCol = #bada55
darkMainCol = darken(mainCol,50%)
backgroundCol = darken(mainCol,85%)

body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

.banner
  background-color: backgroundCol
  color: white
  margin: 15px 0px;

.background
  background-image: url("/images/Background.jpg")
  background-position: center
  height: 80vh
  background-size: cover

.menu
  list-style:none
  padding-left: 0px
  text-align:center
  li
    display:inline-block
    padding:5px
    font-size:24px
    color: mainCol !important
    &:hover
      color: darkMainCol !important

 @media screen and (min-width: 600px)
    .menu
      text-align:left